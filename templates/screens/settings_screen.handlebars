
{{#with view}}

{{#view Yn.HeaderView class="with-small-shadow"}}
	{{view Yn.BackButtonView }}
	<div class="header-title">{{I18n settings}}</div>

  {{#view Yn.AdaptativeButtonView class="header-button l-right is-orange button-text is-small is-font-white" 
    action="goToAbout"}}
    {{I18n about}}
  {{/view}}
{{/view }}
{{#view Yn.ScrollerView class="screen-container"
  exclude=".header"
  excludeGlobal="footer"}}

	<div class="space by-one"></div>

	<div class="box">
		<div class="box-content has-padding">

        {{view Yn.InputView id="input-username" 
          class="main-text is-transparent"
					inputName="username"
					type="text"
          placeholderI18n="name"
          focusOutAction="changeName"
					valueBinding="user.name" }}
			
		</div>
	</div>

	<div class="space by-one"></div>

	<div class="box">
		<div class="box-title-top">
			{{I18n choose_a_city}}
		</div>

    <div class="box-content has-li">

      {{#each cities}}
        <div class="box-content-li box-content-element two-column-table">
          <div class="main-text left-column main">
            {{name}}
          </div>
          <div class="control right-column">
            {{view Yn.ToggleCircleButtonView 
              action="selectCity" 
              selectedBinding="view.user.city"
              contentBinding="this"}}
          </div>
        </div>
      {{/each}}

    </div>

	</div>

	<div class="space by-one"></div>


	{{view Yn.MainButtonView
		class="is-red"
		contentI18n="close_session"
		action="closeSession" }}

  {{view Yn.MainButtonView
  	class="is-black"
  	contentI18n="delete_account"
  	action="deleteAccount" }}


{{/view }}
{{/with}}

